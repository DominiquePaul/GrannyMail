    "version": "0.2.0",
    "configurations": [
        {
            "name": "DC: server",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            // "preLaunchTask": "setup-dev-containers",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src/server/",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "name": "DC: worker",
            "type": "python",
            "request": "attach",
            "port": 5679,
            "host": "localhost",
            "preLaunchTask": "docker-run: debug",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src/server/",
                    "remoteRoot": "/app"
                },
            ],
        },

        {
            "name": "flask-server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src/server/server.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        },


        {
            "name": "Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${fileDirname}"
        }
    ]
}